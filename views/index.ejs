<%- include('layouts/header') %>

    <!-- Hero Section -->
    <div class="hero-section text-white text-center py-5" style="background-color: #004080;">
        <div class="container">
            <h1 class="display-4">Making a Difference Together</h1>
            <p class="lead">Join us in our mission to create positive change in communities worldwide</p>
            <a href="/donate" class="btn btn-warning btn-lg mt-3">Donate Now</a>
        </div>
    </div>

    <!-- About Us Section -->
    <div class="container my-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500" alt="About Us" class="img-fluid rounded">
            </div>
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>We are a non-profit organization dedicated to uplifting underprivileged communities by addressing
                    their most pressing needs. From education to healthcare, our goal is to empower lives and create
                    opportunities for a better future.</p>
                <a href="/about" class="btn btn-primary">Learn More</a>
            </div>
        </div>
    </div>

    <!-- Our Programs Section -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Our Programs</h2>
            <div class="row text-center">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/350" class="card-img-top" alt="Education Program">
                        <div class="card-body">
                            <h5 class="card-title">Education for All</h5>
                            <p class="card-text">Providing quality education and school supplies to children in
                                underserved areas.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/350" class="card-img-top" alt="Healthcare Program">
                        <div class="card-body">
                            <h5 class="card-title">Healthcare Initiatives</h5>
                            <p class="card-text">Improving access to healthcare facilities and creating awareness about
                                hygiene and wellness.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/350" class="card-img-top" alt="Environment Program">
                        <div class="card-body">
                            <h5 class="card-title">Environmental Sustainability</h5>
                            <p class="card-text">Promoting eco-friendly practices and planting trees to combat climate
                                change.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">What Our Supporters Say</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card p-3">
                    <blockquote class="blockquote mb-0">
                        <p>"This organization has completely transformed our community. We are grateful for their
                            support and dedication."</p>
                        <footer class="blockquote-footer">John Doe, <cite title="Source Title">Community Leader</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card p-3">
                    <blockquote class="blockquote mb-0">
                        <p>"Volunteering here was a life-changing experience. The impact we create together is truly
                            inspiring!"</p>
                        <footer class="blockquote-footer">Jane Smith, <cite title="Source Title">Volunteer</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="bg-dark text-white py-5">
        <div class="container text-center">
            <h2>Contact Us</h2>
            <p>We would love to hear from you. Reach out to us for partnerships, donations, or inquiries.</p>
            <a href="/contact" class="btn btn-outline-light mt-3">Get in Touch</a>
        </div>
    </div>

    <%- include('layouts/footer') %>